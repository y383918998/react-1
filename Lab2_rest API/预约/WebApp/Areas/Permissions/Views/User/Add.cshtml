@model RightControl.Model.UserModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutForm.cshtml";
}

<div class="layui-col-md12 top10">
    <form class="layui-form" id="form" action="/Permissions/User/Add" method="post">
        <div class="layui-form-item">
            <label class="layui-form-label">UserName</label>
            <div class="layui-input-inline">
                <input name="UserName" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">RealName</label>
            <div class="layui-input-inline">
                <input name="RealName" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>
          
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">Role</label>
            <div class="layui-input-inline">
                @Html.DropDownList("RoleId", null, "-SelectRole-", new Dictionary<string, object> { { "lay-verify", "required" }, { "lay-vertype", "tips" }, { "class", "layui-input" } })
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">Status</label>
            <div class="layui-input-inline">
                @Html.StatusRadioHtml(true)
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="submitForm" id="submitForm">submit</button>
                <button type="reset" class="layui-btn layui-btn-primary">reset</button>
            </div>
        </div>
    </form>
</div>
<script>
    layui.use(['form'], function () {
        var form = layui.form;
        submitForm(form, "success"); //监听提交
    });
</script>

